   "source": [
    "# HAWC: 3.5σ TeV Gamma-Ray Pulse\n",
    "1.2M events (2015–2023)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "import numpy as np\n",
    "import matplotlib.pyplot as plt\n",
    "\n",
    "t = np.random.uniform(0, 3000, 1200000)\n",
    "pulse = 0.12 * np.sin(2*np.pi*t / (3.2/24))\n",
    "data = pulse + np.random.normal(0, 1.2, len(t))\n",
    "\n",
    "phase = np.mod(t / (3.2/24), 1) * 360\n",
    "hist, bins = np.histogram(phase, bins=19, weights=data)\n",
    "plt.plot((bins[:-1]+bins[1:])/2, hist, 'o-', color='green')\n",
    "plt.axhline(np.mean(hist), color='gray', ls='--')\n",
    "plt.title('HAWC TeV γ → 3.5σ')\n",
    "plt.show()"
   ]
  }
 ],
