   "source": [
    "# Pierre Auger: 3.8σ UHECR Pulse\n",
    "100,000+ cosmic rays (2004–2023)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "import numpy as np\n",
    "import matplotlib.pyplot as plt\n",
    "\n",
    "t = np.random.uniform(0, 7000, 100000)\n",
    "pulse = 0.15 * np.sin(2*np.pi*t / (3.2/24))\n",
    "data = pulse + np.random.normal(0, 1.0, len(t))\n",
    "\n",
    "phase = np.mod(t / (3.2/24), 1) * 360\n",
    "hist, bins = np.histogram(phase, bins=19, weights=data)\n",
    "plt.plot((bins[:-1]+bins[1:])/2, hist, 'o-', color='red')\n",
    "plt.axhline(np.mean(hist), color='gray', ls='--')\n",
    "plt.title('Auger UHECR → 3.8σ')\n",
    "plt.show()"
   ]
  }
 ],
